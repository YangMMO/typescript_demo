{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "es2017", "scripthost"],
    "module": "commonjs", // 默认commonjs, esnext为下一代标准
    "outDir": "lib",
    "experimentalDecorators": true, // 开启实验性方法
    "strictPropertyInitialization": false, // 关闭严格属性初始化
    "strictNullChecks" :true, // 开启null检查
    "baseUrl": "./",  // 添加类型声明文件需要的基础路径
    "allowJs": true, // 允许使用js文件进行编译
    "checkJs": true, // 检查js文件，识别js语法错误
    "paths": {
      "*": ["types/*"]  // 添加类型声明文件需要的路径
    },
    "declaration": true, // tsc时 添加类型声明文件
    "sourceMap": true, // 添加sourceMap
    "strict": false, // 严格模式
    // "jsx": "react", // 开启jsx，同时要开启--allowJs才能编译
  },
  "include": [
    "src/index.ts",
  ],
  // "include": [
  //   "src/index.ts",
  //   "src/**/*",
  //   "typings/**/*"
  // ]
}
